---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: "Inter", sans-serif;
		background-color: rgb(15 23 42);
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
		background-color: rgb(30 41 59) !important;
	}

	p code {
		font-size: 14px;
		color: #c7254e;
    background-color: #f9f2f4 !important;
		border-radius: 4px;
		padding: 3px;
	}
	p {
		color: #cdcdcd;
		padding: 10px 0px 10px 0px;
	}
	.astro-code {
		font-size: 13px;
		background-color: #1e293b !important;
		border-radius: 0.375rem;
		border: 1px solid rgb(51 65 85);
		padding-top: 0.8571429em;
    padding-right: 1.1428571em;
    padding-bottom: 0.8571429em;
    padding-left: 1.1428571em;
	}

	h4 {
		font-weight: bold;
		font-size: 1.2rem;
	}
	a{
		color: rgb(56 189 248);
	}
	a:hover {
		color: rgb(119, 203, 239);
	}
	h2 {
		font-weight: bold;
		font-size: 1.5rem;
	}

	h3 {
		font-weight: bold;
		font-size: 1.3rem;
	}
	.all-posts {
		list-style: none;
	}
	nav .m-menu ul {
		list-style: none;
	}
	ul {
		list-style: circle;
	}
	table {
		width: 100%;
	}
	h1 {
		font-weight: bold;
		font-size: 3rem;
	}
	/* Estilização das tabelas do Markdown */
	li {
		position: relative;
		left: 57px;
		color: #a7abb4;
	}
	li::marker {
		margin-left: 10px;
	}
	li a {
		color: rgb(56 189 248) !important;
	}
	li a:hover {
		color: rgb(119, 203, 239) !important;
	}
	td {
		border: 1px solid rgb(51 65 85);;
		padding: 10px;
	}
	tr {
		border: 1px solid rgb(51 65 85);;
	}
	tr:nth-of-type(odd) {
      background-color: rgb(30 41 59);
	}
	/* Alterações da Scrollbar */
	::-webkit-scrollbar-thumb{
			background: rgb(55 65 81);;
			border-radius: 10px;
    }
	::-webkit-scrollbar{
		height: 6px;
		background-color: rgb(31 41 55);;
	}

	/* Estilização da lista de procura da página inicial */
	.list-none li {
		list-style-type: disc;
		padding: 0;
	}

	.list-none a {
		text-decoration: none;
	}
	.list-none a:hover {
		text-decoration: none;
		color: rgb(156 163 175);

	}
	.list-none p {
		padding-top: 0;
	}

	/* HAMBURGUER */
	/* Mixin */
	nav {
		height: 100%;
		padding: 0 16px;
		display: -ms-flexbox;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-align-items: center;
		align-items: center;
		/* fade in checked menu */
	}
	nav .m-menu__checkbox {
		display: none;
	}
	nav label.m-menu__toggle {
		cursor: pointer;
		position: fixed;
		top: 10px;
		left: 10px;
	}
	nav .m-menu {
		position: fixed;
		top: 0;
		left: 0;
		max-width: 450px;
		width: calc(100vw - 30px);
		height: 100%;
		-moz-transform: translate3d(-450px, 0, 0);
		-o-transform: translate3d(-450px, 0, 0);
		-ms-transform: translate3d(-450px, 0, 0);
		-webkit-transform: translate3d(-450px, 0, 0);
		transform: translate3d(-450px, 0, 0);
		-moz-transition: transform 0.35s;
		-o-transition: transform 0.35s;
		-webkit-transition: transform 0.35s;
		transition: transform 0.35s;
		z-index: 1;
		overflow: hidden;
		border: 1px solid rgb(51 65 85);
		background-color: #1E293B;
	}
	nav .m-menu__header {
		position: sticky;
		height: 90vh;
		top: 0;
		padding: 0 16px;
		height: 50px;
		display: -ms-flexbox;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-justify-content: space-around;
		justify-content: space-around;
		-ms-flex-pack: space-around;
		-webkit-align-items: center;
		align-items: center;
	}
	nav .m-menu__header span {
		padding-top: 30px;
		color: white;
		font-size: 40px;
		font-weight: bold;
		text-align: center;
		width: 100%;
	}
	nav .m-menu .m-menu {
		-moz-transform: translate3d(480px, 0, 0);
		-o-transform: translate3d(480px, 0, 0);
		-ms-transform: translate3d(480px, 0, 0);
		-webkit-transform: translate3d(480px, 0, 0);
		transform: translate3d(480px, 0, 0);
	}
	nav .m-menu ul {
		padding-top: 30px;
		height: 100%;
		overflow-y: auto;
	}
	nav .m-menu ul li a, nav .m-menu ul li label {
		display: block;
		text-align: left;
		line-height: 47px;
		text-decoration: none;
		color: white;
		cursor: pointer;
		font-size: 1rem;
		position: relative;
		font-size: 20px;
	}
	nav .m-menu ul li label.a-label__chevron::after {
		content: "";
		position: absolute;
		display: inline-block;
		height: 10px;
		width: 10px;
		border-color: #333;
		border-style: solid;
		border-width: 1px 1px 0 0;
		-moz-transform: rotate(45deg);
		-o-transform: rotate(45deg);
		-ms-transform: rotate(45deg);
		-webkit-transform: rotate(45deg);
		transform: rotate(45deg);
		top: 50%;
		margin-top: -5px;
		right: 16px;
	}
	nav .m-menu ul li .-invisible {
		border-bottom: 0;
	}
	nav .m-menu .m-menu label.m-menu__toggle {
		display: -ms-flexbox;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		border-bottom: 0;
		padding: 0;
		-webkit-box-sizing: content-box;
		-moz-box-sizing: content-box;
		box-sizing: content-box;
	}
	nav .m-menu__checkbox:checked ~ .m-menu__overlay {
		display: block;
	}
	nav .m-menu__checkbox:checked ~ .m-menu {
		-moz-transform: translate3d(0, 0, 0);
		-o-transform: translate3d(0, 0, 0);
		-ms-transform: translate3d(0, 0, 0);
		-webkit-transform: translate3d(0, 0, 0);
		transform: translate3d(0, 0, 0);
	}

	.ver-todos-button {
	border-radius: 30px;
	padding: 10px 30px 10px 30px;
	background-color: #3498db;
	color: #fff;
	cursor: pointer;
	position: absolute;
	bottom: 30px;
	left: 50%;
	transform: translateX(-50%);
	max-width: 100%;
	font-size: 15px;
	font-weight: bold;
	transition: background-color 0.3s; 
	}
	.ver-todos-button a {
		color:white;
	}

		.ver-todos-button:hover {
			background-color: #297fb8;
	}

	.titulos-todos-documentos {
		color: #e2e8f0 !important;
		position: relative;
		padding: 20px;
		left: 13px;
	}
	.titulos-todos-documentos:hover {
		color: #eff1f2 !important;
		background: #162033;
		border-radius: 5px;
	}

	.circulo-todos-documentos {
		position: relative;
		top: 20px;
		left: -8px;
	}

	blockquote {
		margin-top: 15px;
		margin-bottom: 15px;
		border-top-right-radius: .75rem;
		border-bottom-right-radius: .75rem;
		font-style: italic;
		--tw-border-opacity: 1;
		border-left-color: #38bdf8;
		border-left-width: 3px;
		--tw-bg-opacity: 1;
		padding: .5rem .5rem .5rem 2rem;
		font-size: 2.25rem;
		line-height: 2.5rem;
		font-weight: 200;
		background-color: #2d4258;
		--tw-text-opacity: 1;
		color: rgb(30 41 59/var(--tw-text-opacity));

	}

	/* INFOBOX */
	details {
		padding-top: 10px;
		padding-bottom: 10px;
	}

	summary {
		background-color: #293548;
		border-radius: 0.375rem;
		border: 1px solid rgb(51 65 85);
		padding: 8px;
		cursor: pointer;
	}

	details p {
		background-color: #1e293b;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
		color: #e5e7eb;
		padding-left: 10px;
	}

	details[open] summary {
		background-color: #293548;
		border-radius: 0.375rem 00.375rem 0 0;
	}
	details summary {
		border-radius: 0.375rem;
	}
	details .astro-code {
		border-radius: 0px;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
	}
	details[open] ul {
		background-color: #1e293b;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
		color: #e5e7eb;
	}
	details[open] h3 {
		background-color: #1e293b;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
		color: #e5e7eb;
		padding-left: 10px;
	}
	details[open] h1 {
		padding-left: 10px;
		background-color: #1e293b;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
		color: #e5e7eb;
	}
	details[open] h2 {
		background-color: #1e293b;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
		color: #e5e7eb;
		padding-left: 10px;
	}
	details[open] h4 {
		background-color: #1e293b;
		border-left: 1px solid rgb(51 65 85);
		border-right: 1px solid rgb(51 65 85);
		color: #e5e7eb;
		padding-left: 10px;
	}
	details[open] blockquote {
		border-radius: 0;
		margin: 0;
	}
	details[open] blockquote p {
		background-color: inherit;
	}

	details[open] .astro-code, details[open] code {
		background-color: #1e293b !important;
		border-left-color: #38bdf8;
	}
	details[open] table {
		width: 100%;
	}

	.warning summary {
		padding: 8px;
		font-weight: bold;
		color: #0f172a;
		background-color: #fde882 !important;
		border-bottom: 0px;
		border-top: 1px solid #fef9c3;
		border-left: 1px solid #fef9c3;
		border-right: 1px solid #fef9c3;
		border-bottom: 1px solid #fef9c3;
		border-radius: 0.375rem;
	}
	.warning[open] summary {
		padding: 8px;
		font-weight: bold;
		color: #0f172a;
		background-color: #fde882 !important;
		border-top: 1px solid #fef9c3;
		border-left: 1px solid #fef9c3;
		border-right: 1px solid #fef9c3;
		border-radius: 0.375rem 00.375rem 0 0;
	}

	.warning p {
		background-color: #fde047 !important;
		border-left: 1px solid #fef9c3;
		border-right: 1px solid #fef9c3;
		color: #0f172a;
	}

	.error summary {
		padding: 8px;
		font-weight: bold;
		color: #0f172a;
		background-color: #fb7185 !important;
		border-bottom: 1px;
		border-top: 1px solid #fda4af;
		border-left: 1px solid #fda4af;
		border-right: 1px solid #fda4af;
		border-bottom: 1px solid #fda4af;
		border-radius: 0.375rem;
	}
	.error[open] summary {
		padding: 8px;
		font-weight: bold;
		color: #0f172a;
		background-color: #fb7185 !important;
		border-top: 1px solid #fda4af;
		border-left: 1px solid #fda4af;
		border-right: 1px solid #fda4af;
		border-radius: 0.375rem 00.375rem 0 0;
	}

	.error p {
		background-color: #f43f5e !important;
		border-left: 1px solid #fda4af;
		border-right: 1px solid #fda4af;
		color: #0f172a;
	}
	 
	hr {
		border-top-width: 1px;
    border-color: #e2e8f023;
		margin: 10px 0 10px 0;
	}
	
	p img {
		margin: auto;
		padding: 10px;
	}
	
	ol {
		list-style: decimal;
	}
	ol p {
		padding: 0;
	}

</style>